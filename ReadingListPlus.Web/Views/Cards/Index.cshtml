@model IEnumerable<ReadingListPlus.Web.Models.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Deck.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsNew)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Selection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NextAction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastDelay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coeff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Deck.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNew)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Selection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextAction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDelay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coeff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Back", "Details", "Decks", new { id = ViewBag.DeckID }, null)

@if (Model.Any())
{
    @Html.ActionLink("Back", "Details", "Decks", new { id = Model.First().DeckID }, null)
}
else
{
    <p>No decks found.</p>
}