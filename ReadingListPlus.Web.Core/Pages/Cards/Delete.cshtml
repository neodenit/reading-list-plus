@page

@model CardDeleteModel

@{
    ViewData[Constants.ViewTitle] = "Delete";
}

<h2>Delete</h2>

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this @Resources.Item.ToLower()?</h3>

<hr />

<dl class="dl-horizontal">
    <dt>
        @Resources.ItemCollection
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Card.DeckTitle)
    </dd>

    @if (!string.IsNullOrEmpty(Model.Card.Title))
    {
        <dt>
            @Html.DisplayNameFor(model => model.Card.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Card.Title)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.Card.Text)
    </dt>

    <dd>
        @(Model.Card.Text.Substring(0, Math.Min(128, Model.Card.Text.Length)) + (Model.Card.Text.Length > 128 ? "..." : string.Empty))
    </dd>

    @if (!string.IsNullOrEmpty(Model.Card.Url))
    {
        <dt>
            @Html.DisplayNameFor(model => model.Card.Url)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Card.Url)
        </dd>
    }

</dl>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="@DeckDetailsModel.PageName" asp-route-id="@Model.Card.DeckID">Back</a>
</form>
