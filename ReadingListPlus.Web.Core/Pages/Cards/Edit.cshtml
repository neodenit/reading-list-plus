@page

@model CardEditModel

@{
    ViewData[Constants.ViewTitle] = "Edit";
}

<h2>Edit</h2>

<form method="post">
    <div class="form-horizontal">
        <h4>@Resources.Item</h4>

        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Card.ID" />

        <div class="form-group row">
            <label asp-for="Card.Title" class="control-label col-md-2"></label>
            <div class="col-md-8">
                <input asp-for="Card.Title" class="form-control" />
                <span asp-validation-for="Card.Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Card.Text" class="control-label col-md-2"></label>
            <div class="col-md-8">
                <textarea asp-for="Card.Text" class="form-control focused" rows=10></textarea>
                <span asp-validation-for="Card.Text" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Card.Url" class="control-label col-md-2"></label>
            <div class="col-md-8">
                <input asp-for="Card.Url" class="form-control" />
                <span asp-validation-for="Card.Url" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Card.Type" class="control-label col-md-2"></label>
            <div class="col-md-8">
                <select asp-for="Card.Type" asp-items="Html.GetEnumSelectList(Model.Card.Type.GetType())" class="form-control"></select>
                <span asp-validation-for="Card.Type" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Save" class="btn btn-success btn-block" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-2">
                <a asp-page="@DeckDetailsModel.PageName" asp-route-id="@Model.Card.DeckID" class="btn btn-default btn-block">Back</a>
            </div>
        </div>
    </div>
</form>
