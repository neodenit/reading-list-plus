@using ReadingListPlus.Common.App_GlobalResources
@using ReadingListPlus.Web.Core.Controllers

@model ReadingListPlus.Web.Core.ViewModels.EditCardViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this @(Resources.Item.ToLower())?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @(Resources.ItemCollection)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeckTitle)
        </dd>

        @if (!string.IsNullOrEmpty(Model.Title))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @(Model.Text.Substring(0, Math.Min(128, Model.Text.Length)) + (Model.Text.Length > 128 ? "..." : string.Empty))
        </dd>

        @if (!string.IsNullOrEmpty(Model.Url))
        {
            <dt>
                @Html.DisplayNameFor(model => model.Url)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Url)
            </dd>
        }

    </dl>

    <form method="post">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-controller="@DecksController.Name" asp-action="@nameof(DecksController.Details)" asp-route-id="@Model.DeckID">Back</a>
        </div>
    </form>
</div>
