@model IEnumerable<ReadingListPlus.Web.Core.ViewModels.CardViewModel>

@{
    ViewBag.Title = Model.First().DeckTitle;
}

<h2>@(Model.First().DeckTitle)</h2>

@Html.ActionLink("Back", "Details", "Decks", new { id = Model.First().DeckID }, null)

<table class="table notes-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th class="w-80">
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @(item.Text.Substring(0, Math.Min(256, item.Text.Length)))
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
